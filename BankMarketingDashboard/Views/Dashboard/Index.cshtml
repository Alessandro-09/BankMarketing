@model List<BankMarketingDashboard.Models.CampaignRecord>

@{
    ViewData["Title"] = "Reports";
}

<div class="dashboard-container">
    <h2>Marketing Campaign Dashboard</h2>

    <div class="row">
        <!-- Área de contenido (derecha) -->
        <div class="col-md-12">
            <!-- KPIs -->
            <div class="kpi-cards mb-4">
                <div class="card">
                    <div class="card-body">
                        <h6>Total Contacts</h6>
                        <p class="fs-4">41,188</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h6>Conversion Rate</h6>
                        <p class="fs-4">11.26%</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h6>Avg. Duration</h6>
                        <p class="fs-4">258s</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h6>Successful Calls</h6>
                        <p class="fs-4">4,640</p>
                    </div>
                </div>
            </div>

            <!-- Gráfico -->
            <div class="chart-container">
                <h5 class="chart-title">Civil Status Distribution</h5>
                <canvas id="civilStatusChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Ejemplo de gráfico
        const ctx = document.getElementById('civilStatusChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Married', 'Single', 'Divorced'],
                datasets: [{
                    data: [60, 30, 10],
                    backgroundColor: ['#CB3CFF', '#4e73df', '#1cc88a']
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        labels: {
                            color: 'white'
                        }
                    }
                }
            }
        });

        // Actualización en tiempo real de sliders
        document.getElementById('ageFilter').addEventListener('input', function() {
            document.getElementById('ageValue').textContent = this.value;
        });
        document.getElementById('durationFilter').addEventListener('input', function() {
            document.getElementById('durationValue').textContent = this.value;
        });
    </script>
}